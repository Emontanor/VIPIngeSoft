{
  "name": "cacvi-un",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build --prefix frontend && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.cacviun.app",
    "productName": "CACVi-UN",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist",
      "node_modules"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.3"
  }
}
