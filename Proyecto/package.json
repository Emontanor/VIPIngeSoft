{
  "name": "cacvi-un",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build --prefix frontend && electron-builder",
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "test": "jest"
  },
  "build": {
    "appId": "com.cacviun.app",
    "productName": "CACVi-UN",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist",
      "node_modules"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "concurrently": "^9.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "electron": "^37.2.0",
    "sqlite3": "^5.1.7"
  }
}
